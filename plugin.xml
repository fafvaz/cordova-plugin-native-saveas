<?xml version="1.0" encoding="utf-8"?>
<plugin id="cordova-plugin-native-saveas" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>NativeSaveAs</name>
  <description>Save Base64 to a user-selected location with native Save dialog and native progress UI</description>
  <license>MIT</license>

  <js-module src="www/NativeSaveAs.js" name="NativeSaveAs">
    <clobbers target="cordova.plugins.NativeSaveAs" />
  </js-module>

  <platform name="android">
    <source-file src="src/android/NativeSaveAs.kt" target-dir="src/com/outsystems/nativesaveas" />
    <config-file target="app/src/main/AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </config-file>
  </platform>

  <platform name="ios">
    <source-file src="src/ios/NativeSaveAs.swift" />
    <framework src="UIKit.framework" />
  </platform>

</plugin>
