<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-native-saveas"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>NativeSaveAs</name>
  <description>Show native save dialog for Android and iOS</description>
  <license>MIT</license>
  <keywords>save, native, dialog, file</keywords>

  <js-module src="www/NativeSaveAs.js" name="NativeSaveAs">
    <clobbers target="cordova.plugins.NativeSaveAs" />
  </js-module>

  <!-- Android -->
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="NativeSaveAs">
        <param name="android-package" value="com.outsystems.nativesaveas.NativeSaveAs" />
      </feature>
      <preference name="GradlePluginKotlinEnabled" value="true" />
      <preference name="GradlePluginKotlinCodeStyle" value="official" />
      <preference name="AndroidXEnabled" value="true"/>
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
      <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
      <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    </config-file>
    <framework src="src/android/nativesaveas.gradle" custom="true" type="gradleReference" />
    <source-file src="src/android/NativeSaveAs.kt" target-dir="app/src/main/kotlin/com/outsystems/plugins/nativesaveas" />
  </platform>

  <!-- iOS -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="NativeSaveAs">
        <param name="ios-package" value="NativeSaveAs" />
      </feature>
    </config-file>
    <source-file src="src/ios/NativeSaveAs.swift" />
    <dependency id="cordova-plugin-add-swift-support" version="2.0.2" />
    <!-- iOS entitlements for file access -->
    <config-file target="*-Info.plist" parent="NSFileProviderDecorator">
      <array>
        <dict>
          <key>NSFileProviderDecorations</key>
          <array>
            <dict>
              <key>NSFileProviderDecorationItem</key>
              <dict>
                <key>identifier</key>
                <string>com.apple.fileprovider.actions</string>
              </dict>
            </dict>
          </array>
        </dict>
      </array>
    </config-file>
  </platform>
</plugin>